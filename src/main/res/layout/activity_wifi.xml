<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="116dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/img_gif"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:src="@drawable/wifi" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.68">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:contentDescription="@string/create_hostspot"
            android:src="@mipmap/hotspots" />

        <Button
            android:id="@+id/btn_create_hostspot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@drawable/bt_shape"
            android:text="@string/create_hostspot" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/btn_create_hostspot"
            android:contentDescription="@string/search"
            android:src="@mipmap/wifi" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/btn_create_hostspot"
            android:background="@drawable/bt_shape"
            android:text="@string/search" />

    </RelativeLayout>

</LinearLayout>